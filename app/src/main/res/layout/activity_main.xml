<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
<!--    android:background="@drawable/cherryblossombg"-->
<!--    android:alpha="1"&#45;&#45;/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="312dp"
        android:layout_weight="1"

        >

        <ImageView
            android:id="@+id/myPetImg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_weight="150"
            android:alpha="2"


            android:src="@drawable/samoyed"></ImageView>


    </RelativeLayout>


    <EditText
        android:id="@+id/userInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Guess what age is my pet?"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="number"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="27dp"></TextView>

    <Button
        android:id="@+id/calcBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        android:layout_weight="0.5"
        android:background="#A3E5ED"
        android:onClick="calcBtnPressed"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="Calculate pet's age ~"
        android:textSize="25dp"></Button>




</LinearLayout>